# Snowflake Configuration (REQUIRED)
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=ey_integration_user
SNOWFLAKE_PASSWORD=secure_password
SNOWFLAKE_WAREHOUSE=EY_COMPUTE_WH
SNOWFLAKE_DATABASE=EY_DATA_INTEGRATION
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN

# Google Gemini (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro

# Application Settings
APP_NAME=EY Data Integration SaaS
APP_VERSION=1.0.0
DEBUG=True
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Agent Configuration
MAX_GEMINI_AGENTS=3
MAX_MERGE_AGENTS=10
MAX_QUALITY_AGENTS=5
AGENT_TIMEOUT_SECONDS=300

# Mapping Thresholds
CONFIDENCE_THRESHOLD_HIGH=90
CONFIDENCE_THRESHOLD_MEDIUM=70
CONFIDENCE_THRESHOLD_LOW=50
JIRA_ESCALATION_THRESHOLD=70

# Jira Integration (OPTIONAL for MVP, can mock)
JIRA_ENABLED=false
JIRA_URL=https://ey-integration.atlassian.net
JIRA_EMAIL=integration@ey.com
JIRA_API_TOKEN=your_token
JIRA_PROJECT_KEY=EYDI

# Datadog Integration (OPTIONAL for MVP, can mock)
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_key
DATADOG_APP_KEY=your_app_key
DATADOG_SITE=datadoghq.com

# Snowflake Cost Tracking
SNOWFLAKE_COST_PER_CREDIT=3.00
ENABLE_COST_TRACKING=true
