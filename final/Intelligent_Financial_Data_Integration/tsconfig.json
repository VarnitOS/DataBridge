{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "strict": true,
      "noEmit": true,
      "skipLibCheck": true,
      "allowJs": false,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "types": ["react", "react-dom"],
      "lib": ["ES2020", "DOM"]
    },
    "include": ["src", "vite.config.ts", "tailwind.config.*", "postcss.config.*"],
    "exclude": ["dist", "node_modules"]
  }
  